<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Homework Assignments</h1>
<div class="filter">
<%= search_form_for @search do |f| %>
<label>
<%= f.radio_button :status_cont, "Open", checked: "checked", onclick: "$(this).closest('form').submit();" %>
  Open Assignments (Displayed by default)
</label>
  &nbsp
&nbsp
  <label>
  <%= f.radio_button :status_cont, "Upcoming", onclick: "$(this).closest('form').submit();" %>
  Upcoming Assignments
</label>
  &nbsp
&nbsp
 <label>
  <%= f.radio_button :status_cont, "Closed", onclick: "$(this).closest('form').submit();" %>
  Closed Assignments
</label>
   
  <br>
   <br><br>


   </div>

<% end %>
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Due Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @assignments.each do |assignment| %>
        <tr>

         <% if assignment.assignment_type == "Main" %>
                  <td style ="background: #16a085 !important; font-size: 1.1rem !important; text-align: center; color: white !important" class="lesson_type"><%= link_to assignment.name, assignment %></td>
                  <% end %>
              <% if assignment.assignment_type == "Lab" %>

                 <td style ="background: #c0392b !important; font-size: 1.1rem !important; text-align: center; color: white !important" class="lesson_type"><%= link_to assignment.name, assignment %></td>

                <% end %>
         
          <td><%= assignment.description %></td>
          <td><%= assignment.deadline %></td>
          <%= form_for(assignment) do |f| %>
          <td class="wider">
            <%= f.number_field :score, class: "form-control" %> / <%= assignment.fake_score %></td>
          <td>
            <%= f.label :status, "Open" %>
          <%= f.radio_button :status, "Open" %>
          <br>

            <%= f.label :status, "Upcoming"  %>
            <%= f.radio_button :status, "Upcoming" %>
            <br>
           <%= f.label :status, "Closed"  %>
            <%= f.radio_button :status, "Closed" %>
             </td>
             <td>
              <div class="actions">
                <%= f.submit "Change Status", class:'btn btn-green'%>
              </div>
            </td>
            <% end %>
          <td><%= link_to 'Show', assignment %></td>
        <% if current_user.try(:admin?) %>
          <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
          <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <% if current_user.try(:admin?) %>

  <%= link_to 'New Assignment', new_assignment_path %>
<% end %>
</div>
