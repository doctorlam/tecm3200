 <h2>Student Submissions</h2>

<div class="table-responsive">
<table class="table table-striped table-hover">
  <tr>
    <th class="center">Date</th>
    <th class="center">Assignment Name</th>
      <th class="center">Name</th>

    <th class="center">Description</th>

  </tr>

  <% @submissions.each do |submission| %>
    <tr>
      <td class="center"><%= link_to submission.created_at.strftime("%B %-d, %Y") %></td>
      <td class="center"><%= submission.assignment.name %></td>

      <td class="center"><%= submission.student.name %> <%= submission.student.last_name %></td>
      <td class="center"><%= submission.description %></td>
    
    </tr>
  <% end %>
</table>
</div>