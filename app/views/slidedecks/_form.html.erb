
<%= simple_form_for(@slidedeck) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
  </div>
  	<h2>Slides</h2>

  <%= f.fields_for :slides, @slidedeck.slides.sort_by(&:slide_order) do |builder| %>
    <%= render 'slide_fields', f:builder %>
  <% end %>
  <div class="row">
  <%= link_to_add_fields "Add Slide", f, :slides, class: "btn btn-danger" %>
 </div>
<br>
<br>
<div class="row">
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
</div>
<% end %>

