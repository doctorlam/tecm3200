<%= form_for([@assignment, @submission]) do |f| %>
  <% if @submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
      <% @submission.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
      <h2>Enter Submission Text (if applicable)</h2>
      <%= f.label :description, 'Submission Text Box (Feel free to use line breaks and write as if a WYSIWYG.)' %><br>
      <%= f.text_area :description, class: "form-control", rows: "10" %>
    </div>
    <div class="second-form-group">
    <h2>Add Attachment (if applicable)</h2>
      <%= f.label :document %>
      <%= f.file_field :document, :class => "form-control-file", class: "form-control" %>

    </div>
      <div class="actions">
    <%= f.submit "Submit Assignment", class: 'btn btn-primary' %>
  </div>

<% end %>

